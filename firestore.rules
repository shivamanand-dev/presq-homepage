rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Root collection access for PreSQ Innovation
    match /Presq/{document=**} {
      
      // Contact submissions - Simplified structure
      match /contact_submissions/{submissionId} {
        // Public can write (contact forms)
        allow create: if true && 
          request.resource.data.companyId is string &&
          request.resource.data.source is string &&
          request.resource.data.status is string &&
          request.resource.data.fullName is string &&
          request.resource.data.email is string &&
          request.resource.data.message is string;
        
        // Only authenticated admins can read/update
        allow read, update: if request.auth != null && 
          request.auth.token.admin == true;
        
        // No delete operations allowed
        allow delete: if false;
      }
      
      // Analytics - Simplified structure
      match /analytics/{eventId} {
        // Public can write (analytics tracking)
        allow create: if true;
        
        // Only authenticated admins can read
        allow read: if request.auth != null && 
          request.auth.token.admin == true;
        
        // No update/delete operations
        allow update, delete: if false;
      }
      
      // System logs - Simplified structure
      match /system_logs/{logId} {
        // System can write (error logging)
        allow create: if true;
        
        // Only authenticated admins can read
        allow read: if request.auth != null && 
          request.auth.token.admin == true;
        
        // No update/delete operations
        allow update, delete: if false;
      }
      
      // Default deny all other operations
      allow read, write: if false;
    }
  }
}